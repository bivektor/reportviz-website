---
import PricingCard from "../PricingCard.astro";
const isPricingPage = Astro.url.pathname === "/pricing";
import { getStripeConfig } from "../../config";

const supportLink = isPricingPage ? "basic support" :  `<a href="/pricing">basic support</a>`;

const { button = false } = Astro.props;
---

<PricingCard title="Commercial" price="$399" {...Astro.props}>
  <ul class="check-list">
    <li>
      Licensed for use in a single closed-source and commercial application
    </li>
    <li>Access to full SDK features</li>
    <li>Actively maintained and updated</li>
    <li>Full source code access</li>
    <li>No GPL copyleft requirements</li>
    <li>Includes minor version upgrades</li>
    <li>Includes 1 year <Fragment set:html={supportLink} /> for one seat</li>
  </ul>

  {button && (
    <div class="d-grid mt-4">
      <a
        href={getStripeConfig().sdkPaymentLink}
        class="btn btn-primary btn-lg"
        >Buy Now</a
      >
    </div>
  )}
</PricingCard>
