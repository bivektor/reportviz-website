---
const { tag: Tag = "h2", class: classList = "" } = Astro.props;
---

<Tag class={`section-title accent-title ${classList}`}>
  <span class="accent-bar"></span>
  <slot />
</Tag>

<style is:global>
  .section-title {
    align-self: center;
    color: var(--bs-heading-color);
  }

  .accent-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 600;
    font-size: 2rem;
  }

  .accent-title .accent-bar {
    width: 6px;
    height: 2rem;
    background: var(--bs-primary);
    border-radius: 3px;
  }
</style>
