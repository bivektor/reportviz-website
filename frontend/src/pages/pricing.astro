---
import SdkCommercial from "../components/pricing/SdkCommercial.astro";
import SdkCommunity from "../components/pricing/SdkCommunity.astro";
import Layout from "../layouts/Layout.astro";
import { getStripeConfig } from "../config";
import SectionTitle from "../components/SectionTitle.astro";

const stripeConfig = getStripeConfig();
---

<Layout title="Pricing">
  <div class="py-5 container d-flex flex-column align-items-center">
    <SectionTitle class:list="mb-4">Report Viewer SDK Pricing</SectionTitle>
    <p class="text-center">
      ReportViz is free for development and evaluation. You will need a paid license for use in production.
    </p>
    <div class="row row-cols-1 row-cols-md-2 g-4 mt-4">
      <div class="col">
        <SdkCommunity class:list="h-100" />
      </div>
      <div class="col">
        <SdkCommercial class:list="h-100" button={true} />
      </div>
    </div>
  </div>
  <div class="py-5 container">
    <div class="d-flex justify-content-center">
      <SectionTitle class:list="mb-4">Support Plans</SectionTitle>
    </div>
    <p class="text-center">
      In addition to the SDK licenses, we offer support packages to help you get
      the most out of ReportViz. <br />Choose from Basic and Premium support options
      based on your requirements.
    </p>
    <stripe-pricing-table
      pricing-table-id={stripeConfig.supportTableId}
      publishable-key={stripeConfig.supportTablePublishingKey}
    >
    </stripe-pricing-table>
  </div>

  <Fragment slot="scripts">
    <script is:raw async src="https://js.stripe.com/v3/pricing-table.js"
    ></script>
  </Fragment>
</Layout>
