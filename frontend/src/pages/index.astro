---
import FAQ from "../components/FAQ.astro";
import Feature from "../components/Feature.astro";
import HomeGetStarted from "../components/HomeGetStarted.astro";
import JasperReports from "../components/JasperReports.astro";
import SdkCommercial from "../components/pricing/SdkCommercial.astro";
import SdkCommunity from "../components/pricing/SdkCommunity.astro";
import SectionTitle from "../components/SectionTitle.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout class:list="home" title="Report Viewer SDK for Java">
  <div class="py-5">
    <div class="container">
      <div class="row row-cols-1 row-cols-md-2">
        <div class="col text-center d-flex flex-column justify-content-center">
          <h1 class="fw-bold" style="font-size: 4rem;">
            Report Viewer SDK for Java
          </h1>
          <p class="fw-light fs-3 p-5 pt-2">
            Effortlessly view and execute reports created with <JasperReports />
            in Spring web apps
          </p>
        </div>
        <div class="col">
          <img src="/home-chart-image.png" alt="Report Viewer SDK chart" />
        </div>
      </div>
    </div>
  </div>
  <div class="py-5">
    <div class="container d-flex flex-column align-items-center">
      <SectionTitle class:list="mb-5">Features</SectionTitle>
      <ul class="row list-unstyled row-cols-1 row-cols-md-2 g-3 g-lg-4">
        <li class="col">
          <Feature
            title="REST APIs for Parameter Forms"
            icon="bi bi-braces-asterisk"
            >Build parameter forms from auto-generated UI metadata including
            control types, states and default values.</Feature
          >
        </li>
        <li class="col">
          <Feature title="Smart Parameter Binding" icon="bi bi-link-45deg"
            >Convert request parameters to typed report parameters using
            configurable converters. Customize automatic binding per report.</Feature
          >
        </li>
        <li class="col">
          <Feature
            title="Dependency-aware input controls"
            icon="bi bi-diagram-3"
            >Automatically resolve cascading control dependencies based on SQL
            query structures and handle invalid selections gracefully.</Feature
          >
        </li>
        <li class="col">
          <Feature title="Print Caching" icon="bi bi-lightning-charge"
            >Cache JasperPrint documents for fast retrieval, navigation and
            export without re-running the report</Feature
          >
        </li>
        <li class="col">
          <Feature
            title="Automatic data source resolution"
            icon="bi bi-database-gear"
            >Resolve report and control data sources using pluggable data source
            beans.</Feature
          >
        </li>
        <li class="col">
          <Feature title="Multiple Export Formats" icon="bi bi-files"
            >Export reports to PDF, Excel, Word, HTML, CSV and more using
            built-in JasperReports exporters.</Feature
          >
        </li>
        <li class="col">
          <Feature title="Pluggable Access Control" icon="bi bi-shield-lock"
            >Secure your reports with per-report access control powered by a
            pluggable authorization service.</Feature
          >
        </li>
        <li class="col">
          <Feature title="Developer Friendly" icon="bi bi-code-slash"
            >Integrate with Spring Boot starters, customize through Spring beans
            and configuration, override default MVC controllers for advanced use
            cases.</Feature
          >
        </li>
      </ul>
    </div>
  </div>
  <div class="pb-5">
    <div class="container">
      <div class="d-flex justify-content-center mb-5">
        <SectionTitle>Get Started</SectionTitle>
      </div>
      <HomeGetStarted />
    </div>
  </div>
  <div class="py-5">
    <div class="container">
      <div class="row row-cols-1 row-cols-lg-2">
        <div class="col">
          <div class="px-3 pt-5 px-lg-5" data-aos="fade-up">
            <h2>Built for SQL, flexible for more</h2>
            <p>
              <strong
                >ReportViz offers out-of-the-box support for standard reports</strong
              > that run SQL queries through the primary report data source or connection.
              It also supports populating input controls (like dropdowns) using SQL
              queries.
            </p>
            <p>
              For more advanced use cases, developers can register their own
              data source services — all while benefiting from ReportViz’s
              unified resource management system that ensures safe cleanup of
              underlying resources.
            </p>
          </div>
        </div>
        <div class="col text-center">
          <img
            data-aos="fade-right"
            src="/reportviz-sql-sm.png"
            style="max-width: 100%; height: auto;"
            alt="SQL"
          />
        </div>
      </div>
    </div>
  </div>
  <div class="position-relative pricing-section pb-5">
    <a id="pricing" class="hidden"></a>
    <div class="mb-5 d-flex justify-content-center">
      <SectionTitle>Pricing</SectionTitle>
    </div>
    <div class="container">
      <div class="row row-cols-1 row-cols-lg-2 g-4">
        <div class="col">
          <SdkCommunity class:list="h-100" data-aos="flip-down" />
        </div>
        <div class="col">
          <SdkCommercial
            class:list="h-100"
            data-aos="flip-down"
            button={true}
          />
        </div>
      </div>
      <p class="my-3 text-center">See <a href="/pricing">pricing & licensing</a> for support plans and licensing details.</p>
    </div>
  </div>
  <div class="py-5">
    <div class="container d-flex flex-column align-items-center">
      <SectionTitle class:list="mb-5">FAQ</SectionTitle>
      <FAQ class:list="w-100" />
    </div>
  </div>

  <Fragment slot="head">
    <link
      is:raw
      href="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/themes/prism.min.css"
      rel="stylesheet"
    />
  </Fragment>

  <Fragment slot="scripts">
    <script
      is:raw
      src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/prism.min.js"></script>
    <script
      is:raw
      src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/components/prism-java.min.js"
    ></script>
  </Fragment>
</Layout>
