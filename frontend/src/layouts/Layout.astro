      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"
    />
    <style is:global>
      :root {
        --bs-body-font-family: "Poppins", sans-serif;
        --bs-heading-color: #25395d;
        --bs-light-rgb: 248, 250, 255;
        --bs-primary: #4945df;
        --bs-primary-rgb: 73, 69, 223;
        --bs-secondary: #475b80;
        --bs-secondary-rgb: 71, 91, 128;
      }

      body {
        latter-spacing: 0.6px;
      }

      .nav {
        --bs-nav-link-color: var(--bs-primary);
        --bs-nav-link-hover-color: var(--bs-secondary);
      }

      .btn-primary {
        --bs-btn-bg: #4945df;
        --bs-btn-border-color: #4945df;
        --bs-btn-hover-bg: #3d39bd;
        --bs-btn-hover-border-color: #3935b0;
        --bs-btn-active-bg: #3531a4;
        --bs-btn-active-border-color: #312d98;
      }

      .btn {
        --bs-btn-padding-x: 1rem;
        --bs-btn-font-size: 1rem;
      }

      .btn-lg {
        --bs-btn-padding-x: 1.5rem;
      }

      .tm::after {
        content: "â„¢";
        font-size: 0.7em;
        vertical-align: super;
      }

      a {
        text-decoration: none;
        color: var(--bs-primary);
      }

      a:hover {
        color: var(--bs-secondary);
        font-weight: 500;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-weight: 400;
      }

      .feature-card {
        box-shadow: 0 4px 12px rgba(167, 186, 213, 0.1);
        border-radius: 12px;
      }

      .check-list {
        list-style: none;
        padding-left: 0;
      }

      .check-list li {
        position: relative;
        padding-left: 1.75rem;
        margin-bottom: 0.5rem;
      }

      .check-list li::before {
        content: "\f26b"; /* Bootstrap Icons check-circle-fill unicode */
        font-family: "bootstrap-icons";
        position: absolute;
        left: 0;
        color: var(--bs-success);
      }
    </style>
    <title>{fullTitle}</title>
    <slot name="head" />
  </head>
  <body class:list={classList}>
    <Header />
    <slot />
    <Footer />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js" onload="AOS.init();"
